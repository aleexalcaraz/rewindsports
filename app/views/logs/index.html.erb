<% if @errors.any? %>
  <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>Source</th>
          <th>Number</th>
          <th>Created At</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @errors.each do |error| %>
          <tr>
            <td><%= error.description %></td>
            <td><%= error.source %></td>
            <td><%= error.number %></td>
            <td><%= error.created_at %></td>
            <td>
              <% if error.is_error %>
                <div class="badge badge-error gap-2">
                  error
                </div>
              <% else %>
                <div class="badge badge-success gap-2">
                  success
                </div>
              <% end %>
            </td>
            <td>
              <%= button_to "Delete", log_path(error), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-error btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @total_pages > 1 %>
    <div class="flex justify-center mt-4">
      <div class="join">
        <% if @page > 1 %>
          <%= link_to "«", logs_path(page: @page - 1), class: "join-item btn" %>
        <% end %>
        <% (1..@total_pages).each do |p| %>
          <%= link_to p, logs_path(page: p), class: "join-item btn #{p == @page ? 'btn-active' : ''}" %>
        <% end %>
        <% if @page < @total_pages %>
          <%= link_to "»", logs_path(page: @page + 1), class: "join-item btn" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-center my-10">No errors found.</p>
<% end %>
