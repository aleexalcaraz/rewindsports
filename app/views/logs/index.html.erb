<%= form_with url: logs_path, method: :get, class: "flex gap-2 mb-4" do |f| %>
  <%= f.text_field :search, value: @search, placeholder: "Search description or source...", class: "input input-bordered w-full" %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<% if @errors.any? %>
  <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>Source</th>
          <th>Number</th>
          <th>Created At</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @errors.each do |error| %>
          <tr>
            <td><%= error.description %></td>
            <td><%= error.source %></td>
            <td><%= error.number %></td>
            <td><time datetime="<%= error.created_at.iso8601 %>" data-controller="local-time"><%= error.created_at %></time></td>
            <td>
              <% if error.is_error %>
                <div class="badge badge-error gap-2">
                  error
                </div>
              <% else %>
                <div class="badge badge-success gap-2">
                  success
                </div>
              <% end %>
            </td>
            <td>
              <%= button_to "Delete", log_path(error), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-error btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @total_pages > 1 %>
    <div class="flex justify-center mt-4">
      <div class="join">
        <% if @page > 1 %>
          <%= link_to "« Back", logs_path(page: @page - 1, search: @search), class: "join-item btn" %>
        <% end %>
        <% if @page < @total_pages %>
          <%= link_to "Next »", logs_path(page: @page + 1, search: @search), class: "join-item btn" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-center my-10">No errors found.</p>
<% end %>
